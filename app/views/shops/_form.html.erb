

<%= form_for(@shop, html: { class: "form-horizontal", role: "form" }) do |f| %>
  <% if @shop.errors.any? %>
    <div class="alert alert-danger alert-dismissable" role="alert">
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      <h4><%= pluralize(@shop.errors.count, "error") %> prohibited this user from being saved:</h4>

      <ul>
      <% @shop.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="hidden-fields">
    <%= hidden_field_tag :latitude %>
    <%= f.text_field :latitude %>

    <%= hidden_field_tag :longitude %>
    <%= f.text_field :longitude %>
</div>

  <div class="col-md-6 col-md-offset-3">
    <div class="form-group ">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control", placeholder: "Barbershop name" %>
    </div>

    <div class="form-group">
      <%= f.label "Address " %>
      <%= f.text_field :address, class: "form-control", placeholder: "Address city state" %>
    </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary" %>
  </div>
  </div>
<% end %>
